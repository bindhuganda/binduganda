#include<stdio.h>
int main(){
 int n,product=1;
 printf("N = ");
 scanf("%d",&n);
 if(n==0){
 printf("%d Factorial = %d",n,1);
 }
 else if(n>0){
 for(int i=1;i<=n;i++){
 product=product*i;
 }
 printf("%d Factorial = %d",n,product);
 }
 else if(n<0){
 n=-(n);
 for(int i=1;i<=n;i++){
 product=product*i;
 }
 printf("%d Factorial = %d",n,-(product));
 }
 else{
 printf("Invalid input");
 }
}
